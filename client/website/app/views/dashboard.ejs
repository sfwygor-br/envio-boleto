<html>
	<head>
		<meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
	<script src="js/jquery.js"></script>
	<script>
		function visualizar(id){
			window.location = 'localhost:81/api/'+i;
		}
	</script>
	</head>
	<body>
		<div>
			<nav>				
				<a href="/dashboard">Dashboard</a>
				<a href="/configuracao">Configurações</a>
			</nav>	
			<hr>
		  	<h2> Boletos prontos para envio </h2>
			<% if (boleto.length > 0){ %>
			<table style="width:50%; text-align:center;">
				<tr>
					<th>Data de upload</th>
					<th>Destinatário</th>
					<th> Link para visualização <th>
				</tr>
							
				<%   for(i = 0; i < boleto.length; i++){ %>
				<tr>
					<td><%= boleto[i].upload %></td>
					<td><%= boleto[i].destinatario %></td>
					<td><a href="http://localhost:81/api/<%= boleto[i]._id %>" target="_blank"><%= boleto[i].boleto %></a> </td>					
				</tr>
				<%   } %>				
			</table>
			<a href="/emailBoleto">Enviar boletos</a> 
			<% } else { %> 
			<div style="text-align: center; padding: 10px; color: white; background-color: grey; widht: 100%">
				<h3>Nenhum boleto encontrado</h3>
			</div>
			<% } %>			
		</div>
	</body>
</html>