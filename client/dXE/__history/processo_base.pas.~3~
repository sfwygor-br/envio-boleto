unit processo_base;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, IdBaseComponent, IdComponent, IdTCPConnection, IdTCPClient,
  IdHTTP, ComCtrls, StdCtrls, Buttons, ToolWin;

type
  TForm1 = class(TForm)
    http: TIdHTTP;
    ToolBar1: TToolBar;
    BitBtn1: TBitBtn;
    ToolButton1: TToolButton;
    procedure FormShow(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
    procedure estado(C, R, U, D : boolean);
  end;

var
  id, host, porta : string;

implementation

{$R *.dfm}

uses UPreferencias;

procedure TForm1.estado(C, R, U, D: boolean);
begin
  if C then
  begin
    BitBtn2.Visible := True;
    BitBtn1.Visible := False;
  end
  else if R then
  begin
    BitBtn2.Visible := False;
    BitBtn1.Visible := True;
  end;
end;

procedure TForm1.FormShow(Sender: TObject);
begin
  id := FPreferencias.tenantID.Text;
  host := FPreferencias.hostAPI.Text;
  porta := FPreferencias.portaAPI.Text;
  BitBtn1.Click;
  //estado(true, false, false, false);
end;

end.


